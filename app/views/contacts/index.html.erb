<table>
  <thead>
    <tr>
      <th class="header" colspan="10">
        <h1 class="headerText">Contacts</h1>
      </th>
    </tr>
    
    <tr class="headerRow">
      <th>Name</th>
<!--       <th>Last name</th> -->
      <th>Email</th>
      <th>Twitter</th>
      <th>Github</th>
      <th>Linkedin</th>
      <th>Phone</th>
   <!--    <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody class="bodyRow">
    <% @contacts[:contacts].each do |contact| %>
      <tr>
        <td><%= link_to contact.first_name+ " " +contact.last_name, contact %></td>
<!--         <td><%= contact.last_name %></td> -->
        <td><%= contact.email %></td>
        <td><%= contact.twitter %></td>
        <td><%= contact.github %></td>
        <td><%= contact.linkedin %></td>
        <td><%= contact.phone %></td>
<!--         <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<div class="footer">
  <div class="button-add-new">
    <%= link_to 'New Contact', new_contact_path %>
  </div>
</div>

