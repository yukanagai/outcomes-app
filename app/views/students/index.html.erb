
<table>
  <thead>
    <tr>
      <th class="header" colspan="10">
        <h1 class="headerText">Students</h1>
      </th>
    </tr>

    <tr class="headerRow">
      <th>Username</th>
      <th>Completed?</th>
      <th>Employed?</th>
      <th>Employer</th>
      <th>Employed as</th>
      <th>Contact</th>
      <th>Cohort</th>
 <!--      <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody class="bodyRow">
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.username, student %></td>
        <td><%= student.completed? %></td>
        <td><%= student.employed? %></td>
        <td><%= student.employer %></td>
        <td><%= student.employed_as %></td>
        <td><%= student.contact.email %></td>
        <td><%= student.cohort_name %></td>

        <% if current_user.is_officer? %>
          <td><%= link_to 'Show', student %></td>
          <td><%= link_to 'Edit', edit_student_path(student) %></td>
          <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% elsif current_user.id == student.contact.id %>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

