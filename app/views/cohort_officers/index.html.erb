<p id="notice"><%= notice %></p>

<h1>Listing Cohort Officers</h1>

<table>
  <thead>
    <tr>
      <th>Contact</th>
      <th>Cohort</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohort_officers.each do |cohort_officer| %>
      <tr>
        <td><%= "#{cohort_officer.contact.first_name} #{cohort_officer.contact.last_name}" %></td>
        <td><%= "#{cohort_officer.cohort.program.name} #{cohort_officer.cohort.name}" %></td>
        <td><%= cohort_officer.role %></td>
        <td><%= link_to 'Show', cohort_officer %></td>
        <td><%= link_to 'Edit', edit_cohort_officer_path(cohort_officer) %></td>
        <td><%= link_to 'Destroy', cohort_officer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

