<table>
  <thead>
    <tr>
      <th class="header" colspan="6">
        <h1 class="headerText">Cohort Officers</h1>
      </th>
    </tr>

    <tr>
      <th class="linkBar" colspan="7">
        <div class="button-add-new">
        <%= link_to 'Add new Cohort officer', new_cohort_officer_path %>
        </div>
      </th>
    </tr>

    <tr class="headerRow">
      <th>Contact</th>
      <th>Cohort</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody class="bodyRow">
    <% @cohort_officers.each do |cohort_officer| %>
      <tr>
        <td><%= link_to "#{cohort_officer.contact.first_name} #{cohort_officer.contact.last_name}", cohort_officer %></td>
        <td><%= "#{cohort_officer.cohort.program.name} #{cohort_officer.cohort.name}" %></td>
        <td><%= cohort_officer.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>
